<%= render 'shared/header' %>

<%= month_calendar(attribute: :start_date, end_attribute: :end_date, events: @schedules) do |date, schedules| %>
  <%= date.day %>

  <% schedules.each do |schedule| %>
    <div class="schedules-list">
      <%= link_to schedule.title, schedule_path(schedule.id), class: "schedule-title" %>
    </div>
  <% end %>
<% end %>
